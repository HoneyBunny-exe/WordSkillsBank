<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments_main_activity.TransactionsFragment">

    <TextView
        android:id="@+id/transactions_label"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginTop="200dp"
        android:text="Переводы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/apb"
        android:layout_width="228dp"
        android:layout_height="45dp"
        android:text="Другому человеку"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactions_label" />

    <Button
        android:id="@+id/to_yourself_transfer_button"
        android:layout_width="228dp"
        android:layout_height="45dp"
        android:text="На свой счет"
        app:layout_constraintEnd_toEndOf="@+id/apb"
        app:layout_constraintStart_toStartOf="@+id/apb"
        app:layout_constraintTop_toBottomOf="@+id/apb" />

</androidx.constraintlayout.widget.ConstraintLayout>